<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.SpeakingHands.FullscreenContainer"
    tools:context=".Info">

    <!--IMAGEN DE FONDO-->
    <ImageView
        android:id="@+id/imageViewFondo"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:src="@drawable/header"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="@string/title_info"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="@string/welcomeDescription"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginBottom="32dp"/>

    <!--ASL-->
    <ImageView
        android:id="@+id/imageASL"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/asl" />

    <Button
        android:id="@+id/volver_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volver"
        android:drawableEnd="@android:drawable/ic_menu_revert"
        android:layout_marginEnd="16dp" />


    <!--IMAGEN DE FONDO-->
    <ImageView
        android:id="@+id/imageViewFondo2"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:src="@drawable/header"
        android:layout_marginTop="32dp"/>

</LinearLayout>