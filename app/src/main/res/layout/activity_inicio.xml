<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:theme="@style/ThemeOverlay.SpeakingHands.FullscreenContainer"
    tools:context=".Inicio">

    <!--TITULO-->

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/logo_intro"
        android:layout_marginBottom="157dp"
        android:layout_marginTop="26dp"/>

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:height="48dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/info_icon"
        app:iconPadding="0dp"
        android:layout_marginTop="50dp"/>

    <!--GRABAR Y GALERIA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/galeria"
            android:drawableEnd="@android:drawable/ic_menu_gallery"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/buttonGrabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grabar"
            android:drawableEnd="@android:drawable/ic_menu_camera"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="54dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:height="48dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/translate"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:height="48dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/person"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/menu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:height="48dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/settings"
            app:iconPadding="0dp" />

    </LinearLayout>

</LinearLayout>